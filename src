      </main>

      <Footer />
    </div>
  );
}

/*
  Public Blog Listing Page
  - Display all published blog posts
  - Search functionality
  - Click to view full post
*/

import Navigation from "@/components/Navigation";
import Footer from "@/components/Footer";
import GridBackground from "@/components/GridBackground";
import { Card } from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Button } from "@/components/ui/button";
import { trpc } from "@/lib/trpc";
import { Link } from "wouter";
import { Search, Calendar, Eye } from "lucide-react";
import { useState } from "react";

export default function Blog() {
  const [searchQuery, setSearchQuery] = useState("");
  const [selectedCategory, setSelectedCategory] = useState<string | null>(null);
  const { data: posts, isLoading } = trpc.blog.list.useQuery();
  const { data: searchResults, refetch: searchRefetch } = trpc.blog.search.useQuery(
    { query: searchQuery },
    { enabled: false }
  );
  const { data: categoryPosts, refetch: categoryRefetch } = trpc.blog.getByCategory.useQuery(
    { category: selectedCategory || "" },
    { enabled: false }
  );
  const { data: categories } = trpc.blog.getCategories.useQuery();

  const displayPosts = searchQuery && searchResults ? searchResults : selectedCategory && categoryPosts ? categoryPosts : posts;

  const handleSearch = (e: React.FormEvent) => {
    e.preventDefault();
    if (searchQuery.trim()) {
      setSelectedCategory(null);
      searchRefetch();
    }
  };

  const handleCategorySelect = (category: string) => {
    setSelectedCategory(category);
    setSearchQuery("");
    categoryRefetch();
  };

  return (
    <div className="min-h-screen flex flex-col">
      <GridBackground />
      <Navigation />

      <main className="flex-1 pt-32 pb-20">
        <div className="container">
          {/* Page Header */}
          <div className="text-center mb-16 space-y-4">
            <h1 className="text-5xl md:text-6xl font-black text-foreground glow-text">
              Technical Blog
            </h1>
            <p className="text-xl text-foreground/70 font-['Exo_2'] max-w-3xl mx-auto">
              Insights, tutorials, and deep dives into web development, cybersecurity, and modern technology
            </p>
          </div>

          {/* Categories */}
          {categories && categories.length > 0 && (
            <div className="mb-8">
              <div className="flex flex-wrap gap-3 justify-center">
                <Button
                  variant={selectedCategory === null ? "default" : "outline"}
                  onClick={() => {
                    setSelectedCategory(null);
                    setSearchQuery("");
                  }}
                  className={selectedCategory === null ? "bg-gradient-to-r from-primary to-accent text-background" : "border-primary/30"}
                >
                  All Posts
                </Button>
                {categories.map((category) => (
                  <Button
                    key={category}
                    variant={selectedCategory === category ? "default" : "outline"}
                    onClick={() => handleCategorySelect(category)}
                    className={selectedCategory === category ? "bg-gradient-to-r from-primary to-accent text-background" : "border-primary/30"}
                  >
                    {category}
                  </Button>
                ))}
              </div>
            </div>
          )}

          {/* Search Bar */}
          <Card className="p-6 mb-12 bg-card/60 backdrop-blur-lg border-2 border-primary/20">
            <form onSubmit={handleSearch} className="flex gap-4">
              <div className="flex-1 relative">
                <Search className="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-foreground/50" />
                <Input
                  type="text"
                  placeholder="Search articles..."
                  value={searchQuery}
                  onChange={(e) => setSearchQuery(e.target.value)}
                  className="pl-10 bg-background/50 border-primary/30"
                />
              </div>
              <Button
                type="submit"
                className="bg-gradient-to-r from-primary to-accent hover:from-primary/90 hover:to-accent/90 text-background font-bold"
              >
                Search
              </Button>
              {searchQuery && (
                <Button
                  type="button"
                  variant="outline"
                  onClick={() => {
                    setSearchQuery("");
                  }}
                >
                  Clear
                </Button>
              )}
            </form>
          </Card>

          {/* Blog Posts */}
          {isLoading ? (
            <div className="text-center py-12">
              <p className="text-foreground/70">Loading articles...</p>
            </div>
          ) : displayPosts && displayPosts.length > 0 ? (
            <div className="grid md:grid-cols-2 gap-8">
              {displayPosts.map((post) => (
                <Link key={post.id} href={`/blog/${post.slug}`}>
                  <Card className="h-full p-6 bg-card/60 backdrop-blur-lg border-2 border-primary/20 hover:border-primary/60 transition-all duration-300 hover:scale-[1.02] hover:shadow-[0_0_30px_var(--neon-cyan)] cursor-pointer group">
                    {post.coverImage && (
                      <div className="mb-4 rounded-lg overflow-hidden">
                        <img
                          src={post.coverImage}
                          alt={post.title}
                          className="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105"
                        />
                      </div>
                    )}
                    
                    <h2 className="text-2xl font-bold text-primary glow-text mb-3 font-['Orbitron']">
                      {post.title}
                    </h2>

                    {post.excerpt && (
                      <p className="text-foreground/70 mb-4 line-clamp-3">
                        {post.excerpt}
                      </p>
                    )}

                    {post.tags && (
                      <div className="flex flex-wrap gap-2 mb-4">
                        {post.tags.split(',').map((tag, idx) => (
                          <span
                            key={idx}
                            className="px-3 py-1 text-xs font-bold bg-primary/10 text-primary border border-primary/30 rounded-full"
                          >
                            {tag.trim()}
                          </span>
                        ))}
                      </div>
                    )}

                    <div className="flex items-center gap-4 text-sm text-foreground/50">
                      <div className="flex items-center gap-1">
                        <Calendar className="w-4 h-4" />
                        {new Date(post.publishedAt || post.createdAt).toLocaleDateString()}
                      </div>
                      <div className="flex items-center gap-1">
                        <Eye className="w-4 h-4" />
                        {post.viewCount} views
                      </div>
                    </div>
                  </Card>
                </Link>
              ))}
            </div>
          ) : (
            <Card className="p-12 bg-card/60 backdrop-blur-lg border-2 border-primary/20 text-center">
              <p className="text-foreground/70 text-lg">
                {searchQuery
                  ? `No articles found for "${searchQuery}"`
                  : "No articles published yet. Check back soon!"}
              </p>
            </Card>
          )}
        </div>
      </main>

      <Footer />
    </div>
  );
}

/*
  Blog Admin CMS Interface
  - List all blog posts (published and drafts)
  - Create, edit, delete blog posts
  - Markdown editor for content
  - Admin-only access
*/

import { useAuth } from "@/_core/hooks/useAuth";
import { Button } from "@/components/ui/button";
import { Card } from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import RichTextEditor from "@/components/RichTextEditor";
import { Label } from "@/components/ui/label";
import {
  Dialog,
  DialogContent,
  DialogDescription,
  DialogHeader,
  DialogTitle,
  DialogTrigger,
} from "@/components/ui/dialog";
import Navigation from "@/components/Navigation";
import Footer from "@/components/Footer";
import GridBackground from "@/components/GridBackground";
import { trpc } from "@/lib/trpc";
import { useState } from "react";
import { toast } from "sonner";
import { Plus, Edit, Trash2, Eye, EyeOff } from "lucide-react";
import { useLocation } from "wouter";
import { getLoginUrl } from "@/const";

export default function BlogAdmin() {
  const { user, loading: authLoading } = useAuth();
  const [, setLocation] = useLocation();
  const [editingPost, setEditingPost] = useState<number | null>(null);
  const [dialogOpen, setDialogOpen] = useState(false);

  const [formData, setFormData] = useState({
    title: "",
    slug: "",
    content: "",
    excerpt: "",
    coverImage: "",
    tags: "",
    category: "",
    seriesName: "",
    seriesOrder: undefined as number | undefined,
    published: 0,
  });

  const { data: posts, isLoading, refetch } = trpc.blog.list.useQuery(
    { includeUnpublished: true },
    { enabled: user?.role === 'admin' }
  );

  const createMutation = trpc.blog.create.useMutation({
    onSuccess: () => {
      toast.success("Blog post created successfully!");
      refetch();
      setDialogOpen(false);
      resetForm();
    },
    onError: (error) => {
      toast.error(error.message);
    },
  });

  const updateMutation = trpc.blog.update.useMutation({
    onSuccess: () => {
      toast.success("Blog post updated successfully!");
      refetch();
      setDialogOpen(false);
      resetForm();
    },
    onError: (error) => {
      toast.error(error.message);
    },
  });

  const deleteMutation = trpc.blog.delete.useMutation({
    onSuccess: () => {
      toast.success("Blog post deleted successfully!");
      refetch();
    },
    onError: (error) => {
      toast.error(error.message);
    },
  });

  const resetForm = () => {
    setFormData({
      title: "",
      slug: "",
      content: "",
      excerpt: "",
      coverImage: "",
      tags: "",
      category: "",
      seriesName: "",
      seriesOrder: undefined,
      published: 0,
    });
    setEditingPost(null);
  };

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault();

    if (editingPost) {
      updateMutation.mutate({ id: editingPost, ...formData });
    } else {
      createMutation.mutate(formData);
    }
  };

  const handleEdit = (post: any) => {
    setFormData({
      title: post.title,
      slug: post.slug,
      content: post.content,
      excerpt: post.excerpt || "",
      coverImage: post.coverImage || "",
      tags: post.tags || "",
      category: post.category || "",
      seriesName: post.seriesName || "",
      seriesOrder: post.seriesOrder || undefined,
      published: post.published,
    });
    setEditingPost(post.id);
    setDialogOpen(true);
  };

  const handleDelete = (id: number) => {
    if (confirm("Are you sure you want to delete this blog post?")) {
      deleteMutation.mutate({ id });
    }
  };

  const handleNewPost = () => {
    resetForm();
    setDialogOpen(true);
  };

  const generateSlug = (title: string) => {
    return title
      .toLowerCase()
      .replace(/[^a-z0-9]+/g, "-")
      .replace(/(^-|-$)/g, "");
  };

  // Redirect non-admin users
  if (authLoading) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <p className="text-foreground">Loading...</p>
      </div>
    );
  }

  if (!user) {
    window.location.href = getLoginUrl();
    return null;
  }

  if (user.role !== 'admin') {
    return (
      <div className="min-h-screen flex flex-col">
        <GridBackground />
        <Navigation />
        <main className="flex-1 flex items-center justify-center pt-24">
          <Card className="p-8 bg-card/60 backdrop-blur-lg border-2 border-primary/20 text-center">
            <h1 className="text-2xl font-bold text-foreground mb-4">Access Denied</h1>
            <p className="text-foreground/70 mb-6">You need admin privileges to access this page.</p>
            <Button onClick={() => setLocation("/")}>Go Home</Button>
          </Card>
        </main>
        <Footer />
      </div>
    );
  }

  return (
    <div className="min-h-screen flex flex-col">
      <GridBackground />
      <Navigation />

      <main className="flex-1 pt-32 pb-20">
        <div className="container">
          <div className="flex items-center justify-between mb-8">
            <h1 className="text-4xl md:text-5xl font-black text-foreground glow-text">
              Blog Management
            </h1>
            <Dialog open={dialogOpen} onOpenChange={setDialogOpen}>
              <DialogTrigger asChild>
                <Button
                  onClick={handleNewPost}
                  className="bg-gradient-to-r from-primary to-accent hover:from-primary/90 hover:to-accent/90 text-background font-bold glow-border"
                >
                  <Plus className="w-5 h-5 mr-2" />
                  New Post
                </Button>
              </DialogTrigger>
              <DialogContent className="max-w-4xl max-h-[90vh] overflow-y-auto bg-card border-2 border-primary/20">
                <DialogHeader>
                  <DialogTitle className="text-2xl font-bold text-primary">
                    {editingPost ? "Edit Blog Post" : "Create New Blog Post"}
                  </DialogTitle>
                  <DialogDescription>
                    Fill in the details below to {editingPost ? "update" : "create"} your blog post.
                  </DialogDescription>
                </DialogHeader>

                <form onSubmit={handleSubmit} className="space-y-6 mt-4">
                  <div className="space-y-2">
                    <Label htmlFor="title">Title</Label>
                    <Input
                      id="title"
                      value={formData.title}
                      onChange={(e) => {
                        setFormData({ ...formData, title: e.target.value });
                        if (!editingPost) {
                          setFormData({ ...formData, title: e.target.value, slug: generateSlug(e.target.value) });
                        }
                      }}
                      required
                      className="bg-background/50 border-primary/30"
                    />
                  </div>

                  <div className="space-y-2">
                    <Label htmlFor="slug">Slug (URL)</Label>
                    <Input
                      id="slug"
                      value={formData.slug}
                      onChange={(e) => setFormData({ ...formData, slug: e.target.value })}
                      required
                      className="bg-background/50 border-primary/30"
                    />
                  </div>

                  <div className="space-y-2">
                    <Label htmlFor="excerpt">Excerpt</Label>
                    <Textarea
                      id="excerpt"
                      value={formData.excerpt}
                      onChange={(e) => setFormData({ ...formData, excerpt: e.target.value })}
                      rows={3}
                      className="bg-background/50 border-primary/30"
                    />
                  </div>

                  <div className="space-y-2">
                    <Label htmlFor="content">Content</Label>
                    <RichTextEditor
                      content={formData.content}
                      onChange={(content) => setFormData({ ...formData, content })}
                    />
                  </div>

                  <div className="space-y-2">
                    <Label htmlFor="coverImage">Cover Image URL</Label>
                    <Input
                      id="coverImage"
                      value={formData.coverImage}
                      onChange={(e) => setFormData({ ...formData, coverImage: e.target.value })}
                      className="bg-background/50 border-primary/30"
                    />
                  </div>

                  <div className="space-y-2">
                    <Label htmlFor="tags">Tags (comma-separated)</Label>
                    <Input
                      id="tags"
                      value={formData.tags}
                      onChange={(e) => setFormData({ ...formData, tags: e.target.value })}
                      placeholder="react, typescript, web development"
                      className="bg-background/50 border-primary/30"
                    />
                  </div>

                  <div className="grid md:grid-cols-2 gap-4">
                    <div className="space-y-2">
                      <Label htmlFor="category">Category</Label>
                      <Input
                        id="category"
                        value={formData.category}
                        onChange={(e) => setFormData({ ...formData, category: e.target.value })}
                        placeholder="Web Development, Security, etc."
                        className="bg-background/50 border-primary/30"
                      />
                    </div>

                    <div className="space-y-2">
                      <Label htmlFor="seriesName">Series Name (optional)</Label>
                      <Input
                        id="seriesName"
                        value={formData.seriesName}
                        onChange={(e) => setFormData({ ...formData, seriesName: e.target.value })}
                        placeholder="React Hooks Deep Dive"
                        className="bg-background/50 border-primary/30"
                      />
                    </div>
                  </div>

                  {formData.seriesName && (
                    <div className="space-y-2">
                      <Label htmlFor="seriesOrder">Series Order</Label>
                      <Input
                        id="seriesOrder"
                        type="number"
                        value={formData.seriesOrder || ""}
                        onChange={(e) => setFormData({ ...formData, seriesOrder: e.target.value ? parseInt(e.target.value) : undefined })}
                        placeholder="1"
                        className="bg-background/50 border-primary/30"
                      />
                    </div>
                  )}

                  <div className="flex items-center gap-4">
                    <Label htmlFor="published">Status:</Label>
                    <Button
                      type="button"
                      variant={formData.published === 1 ? "default" : "outline"}
                      onClick={() => setFormData({ ...formData, published: formData.published === 1 ? 0 : 1 })}
                      className="font-bold"
                    >
                      {formData.published === 1 ? (
                        <>
                          <Eye className="w-4 h-4 mr-2" />
                          Published
                        </>
                      ) : (
                        <>
                          <EyeOff className="w-4 h-4 mr-2" />
                          Draft
                        </>
                      )}
                    </Button>
                  </div>

                  <div className="flex gap-4 pt-4">
                    <Button
                      type="submit"
                      className="flex-1 bg-gradient-to-r from-primary to-accent hover:from-primary/90 hover:to-accent/90 text-background font-bold"
                      disabled={createMutation.isPending || updateMutation.isPending}
                    >
                      {editingPost ? "Update Post" : "Create Post"}
                    </Button>
                    <Button
                      type="button"
                      variant="outline"
                      onClick={() => {
                        setDialogOpen(false);
                        resetForm();
                      }}
                    >
                      Cancel
                    </Button>
                  </div>
                </form>
              </DialogContent>
            </Dialog>
          </div>

          {isLoading ? (
            <div className="text-center py-12">
              <p className="text-foreground/70">Loading blog posts...</p>
            </div>
          ) : posts && posts.length > 0 ? (
            <div className="grid gap-6">
              {posts.map((post) => (
                <Card
                  key={post.id}
                  className="p-6 bg-card/60 backdrop-blur-lg border-2 border-primary/20 hover:border-primary/40 transition-all duration-300"
                >
                  <div className="flex items-start justify-between gap-4">
                    <div className="flex-1">
                      <div className="flex items-center gap-3 mb-2">
                        <h3 className="text-2xl font-bold text-primary">{post.title}</h3>
                        {post.published === 1 ? (
                          <span className="px-3 py-1 text-xs font-bold bg-primary/20 text-primary border border-primary/30 rounded-full">
                            PUBLISHED
                          </span>
                        ) : (
                          <span className="px-3 py-1 text-xs font-bold bg-foreground/10 text-foreground/60 border border-foreground/20 rounded-full">
                            DRAFT
                          </span>
                        )}
                      </div>
                      <p className="text-foreground/70 mb-2">/{post.slug}</p>
                      {post.excerpt && (
                        <p className="text-foreground/60 mb-3">{post.excerpt}</p>
                      )}
                      <div className="flex items-center gap-4 text-sm text-foreground/50">
                        <span>{post.viewCount} views</span>
                        <span>•</span>
                        <span>{new Date(post.createdAt).toLocaleDateString()}</span>
                      </div>
                    </div>
                    <div className="flex gap-2">
                      <Button
                        size="icon"
                        variant="outline"
                        onClick={() => handleEdit(post)}
                        className="border-primary/30 hover:border-primary"
                      >
                        <Edit className="w-4 h-4" />
                      </Button>
                      <Button
                        size="icon"
                        variant="outline"
                        onClick={() => handleDelete(post.id)}
                        className="border-destructive/30 hover:border-destructive text-destructive"
                        disabled={deleteMutation.isPending}
                      >
                        <Trash2 className="w-4 h-4" />
                      </Button>
                    </div>
                  </div>
                </Card>
              ))}
            </div>
          ) : (
            <Card className="p-12 bg-card/60 backdrop-blur-lg border-2 border-primary/20 text-center">
              <p className="text-foreground/70 mb-6">No blog posts yet. Create your first post to get started!</p>
              <Button
                onClick={handleNewPost}
                className="bg-gradient-to-r from-primary to-accent hover:from-primary/90 hover:to-accent/90 text-background font-bold"
              >
                <Plus className="w-5 h-5 mr-2" />
                Create First Post
              </Button>
            </Card>
          )}
        </div>
      </main>

      <Footer />
    </div>
  );
}

/*
  Blog Post Detail Page
  - Display full blog post content
  - Markdown rendering
  - View counter
*/

import Navigation from "@/components/Navigation";
import Footer from "@/components/Footer";
import GridBackground from "@/components/GridBackground";
import { Card } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { trpc } from "@/lib/trpc";
import { useRoute } from "wouter";
import { Link } from "wouter";
import { ArrowLeft, Calendar, Eye, Share2 } from "lucide-react";
import SEOHead from "@/components/SEOHead";
import SocialShare from "@/components/SocialShare";
import { Streamdown } from "streamdown";

export default function BlogPost() {
  const [, params] = useRoute("/blog/:slug");
  const slug = params?.slug || "";

  const { data: post, isLoading, error } = trpc.blog.getBySlug.useQuery(
    { slug },
    { enabled: !!slug }
  );

  if (isLoading) {
    return (
      <div className="min-h-screen flex flex-col">
        <GridBackground />
        <Navigation />
        <main className="flex-1 flex items-center justify-center pt-24">
          <p className="text-foreground/70">Loading article...</p>
        </main>
        <Footer />
      </div>
    );
  }

  if (error || !post) {
    return (
      <div className="min-h-screen flex flex-col">
        <GridBackground />
        <Navigation />
        <main className="flex-1 flex items-center justify-center pt-24">
          <Card className="p-8 bg-card/60 backdrop-blur-lg border-2 border-primary/20 text-center">
            <h1 className="text-2xl font-bold text-foreground mb-4">Article Not Found</h1>
            <p className="text-foreground/70 mb-6">The article you're looking for doesn't exist or has been removed.</p>
            <Link href="/blog">
              <Button className="bg-gradient-to-r from-primary to-accent hover:from-primary/90 hover:to-accent/90 text-background font-bold">
                <ArrowLeft className="w-4 h-4 mr-2" />
                Back to Blog
              </Button>
            </Link>
          </Card>
        </main>
        <Footer />
      </div>
    );
  }

  const fullUrl = typeof window !== 'undefined' ? window.location.href : '';

  return (
    <div className="min-h-screen flex flex-col">
      {post && (
        <SEOHead
          title={post.title}
          description={post.excerpt || post.content.substring(0, 160)}
          image={post.coverImage || undefined}
          url={fullUrl}
          type="article"
          publishedTime={post.publishedAt ? new Date(post.publishedAt).toISOString() : undefined}
          modifiedTime={new Date(post.updatedAt).toISOString()}
          author="Chris Heppard"
          tags={post.tags ? post.tags.split(',').map(t => t.trim()) : []}
        />
      )}
      <GridBackground />
      <Navigation />

      <main className="flex-1 pt-32 pb-20">
        <div className="container max-w-4xl">
          {/* Back Button */}
          <Link href="/blog">
            <Button
              variant="outline"
              className="mb-8 border-primary/30 hover:border-primary"
            >
              <ArrowLeft className="w-4 h-4 mr-2" />
              Back to Blog
            </Button>
          </Link>

          <article>
            {/* Cover Image */}
            {post.coverImage && (
              <div className="mb-8 rounded-lg overflow-hidden border-2 border-primary/20">
                <img
                  src={post.coverImage}
                  alt={post.title}
                  className="w-full h-96 object-cover"
                />
              </div>
            )}

            {/* Post Header */}
            <Card className="p-8 mb-8 bg-card/60 backdrop-blur-lg border-2 border-primary/20">
              <h1 className="text-4xl md:text-5xl font-black text-foreground glow-text mb-4 font-['Orbitron']">
                {post.title}
              </h1>

              {post.excerpt && (
                <p className="text-xl text-foreground/70 mb-6 font-['Exo_2']">
                  {post.excerpt}
                </p>
              )}

              <div className="flex flex-wrap items-center gap-4 text-sm text-foreground/50">
                <div className="flex items-center gap-2">
                  <Calendar className="w-4 h-4" />
                  {new Date(post.publishedAt || post.createdAt).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </div>
                <div className="flex items-center gap-2">
                  <Eye className="w-4 h-4" />
                  {post.viewCount} views
                </div>
                {post.category && (
                  <>
                    <span>•</span>
                    <span className="text-primary font-semibold">{post.category}</span>
                  </>
                )}
              </div>

              {post.seriesName && (
                <div className="mt-4 p-4 bg-primary/10 border border-primary/30 rounded-lg">
                  <p className="text-sm text-foreground/70">
                    <span className="font-bold text-primary">Part of series:</span> {post.seriesName}
                    {post.seriesOrder && ` - Part ${post.seriesOrder}`}
                  </p>
                </div>
              )}

              {post.tags && (
                <div className="flex flex-wrap gap-2 mt-6">
                  {post.tags.split(',').map((tag, idx) => (
                    <span
                      key={idx}
                      className="px-3 py-1 text-xs font-semibold bg-primary/20 text-primary border border-primary/30 rounded-full"
                    >
                      {tag.trim()}
                    </span>
                  ))}
                </div>
              )}

              {/* Social Sharing */}
              <div className="mt-8 pt-6 border-t border-primary/20">
                <div className="flex items-center gap-2 mb-4">
                  <Share2 className="w-5 h-5 text-primary" />
                  <h3 className="text-lg font-bold text-foreground">Share this article</h3>
                </div>
                <SocialShare
                  url={fullUrl}
                  title={post.title}
                  description={post.excerpt || undefined}
                />  
              </div>
            </Card>

            {/* Post Content */}
            <Card className="p-8 md:p-12 bg-card/60 backdrop-blur-lg border-2 border-primary/20">
              <div className="prose prose-invert prose-lg max-w-none">
                <Streamdown>{post.content}</Streamdown>
              </div>
            </Card>

            {/* Back to Blog Footer */}
            <div className="mt-12 text-center">
              <Link href="/blog">
                <Button
                  size="lg"
                  className="bg-gradient-to-r from-primary to-accent hover:from-primary/90 hover:to-accent/90 text-background font-bold text-lg px-8 py-6 glow-border transition-all duration-300 hover:scale-105"
                >
                  <ArrowLeft className="w-5 h-5 mr-2" />
                  Read More Articles
                </Button>
              </Link>
            </div>
          </article>
        </div>
      </main>

      <Footer />
    </div>
  );
}

import {
  Accordion,
  AccordionContent,
  AccordionItem,
  AccordionTrigger,
} from "@/components/ui/accordion";
import { Alert, AlertDescription, AlertTitle } from "@/components/ui/alert";
import { AspectRatio } from "@/components/ui/aspect-ratio";
import { Avatar, AvatarFallback, AvatarImage } from "@/components/ui/avatar";
